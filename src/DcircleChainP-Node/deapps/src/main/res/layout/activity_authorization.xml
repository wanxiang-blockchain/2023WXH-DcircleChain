<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_f6f6f6"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.Toolbar
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/tool_bar"
        android:elevation="@dimen/dp_0"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/dp_34"
            android:layout_height="@dimen/dp_44"
            android:paddingVertical="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_gravity="start"
            android:src="@mipmap/ic_back_arrow"
            android:contentDescription="@null" />
        <com.base.baseui.widget.others.GilroyTextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DcircleChain P-Node Demo"
            app:gilroyFont="regular"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:textSize="@dimen/sp_18" />
    </androidx.appcompat.widget.Toolbar>

    <View
        android:background="@color/color_f1f1f1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <com.base.baseui.widget.others.GilroyTextView
            android:id="@+id/tvContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_15"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:gilroyFont="bold"
            android:text="授权数据"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
             />
        <LinearLayout
            android:id="@+id/view_trans_circle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_80"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginHorizontal="@dimen/dp_20"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/shape_corner_ffffff_10"
            app:layout_constraintTop_toBottomOf="@+id/tvContent">
            <ImageView
                android:layout_width="@dimen/dp_17"
                android:layout_height="@dimen/dp_16"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/dp_20"
                android:src="@mipmap/auth_selected"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.base.baseui.widget.others.GilroyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/dp_10"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:gilroyFont="medium"
                android:text="授权Dcircle Social"
                android:layout_marginVertical="@dimen/dp_9"
                app:layout_constraintStart_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/view_trans_content"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_80"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginHorizontal="@dimen/dp_20"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/shape_corner_ffffff_10"
            app:layout_constraintTop_toBottomOf="@+id/view_trans_circle">
            <ImageView
                android:layout_width="@dimen/dp_17"
                android:layout_height="@dimen/dp_16"
                android:layout_marginStart="@dimen/dp_20"
                android:src="@mipmap/auth_selected"
                android:layout_gravity="center_vertical" />

            <com.base.baseui.widget.others.GilroyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:gilroyFont="medium"
                android:text="授权内容"
                android:layout_gravity="center_vertical"
                android:layout_marginVertical="@dimen/dp_9"
                app:layout_constraintStart_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/view_trans_token"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_80"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginHorizontal="@dimen/dp_20"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/shape_corner_ffffff_10"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constraintTop_toBottomOf="@+id/view_trans_content">
            <ImageView
                android:id="@+id/view_trans_icon"
                android:layout_width="@dimen/dp_17"
                android:layout_height="@dimen/dp_16"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/dp_20"
                android:src="@mipmap/auth_selected"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.base.baseui.widget.others.GilroyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/dp_10"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:gilroyFont="medium"
                android:text="授权Token"
                android:layout_marginVertical="@dimen/dp_9"
                app:layout_constraintStart_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </LinearLayout>
        <com.base.baseui.widget.others.GilroyTextView
            android:id="@+id/tvTips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_15"
            android:textColor="@color/color_969799"
            android:textSize="@dimen/sp_12"
            app:gilroyFont="regular"
            android:text="Demo暂不支持取消勾选"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_trans_token"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/view_trans_tips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_20"
        android:paddingVertical="@dimen/dp_10"
        android:gravity="center"
        android:layout_gravity="bottom"
        android:background="@drawable/shape_corner_efefef_10">
        <ImageView
            android:layout_width="@dimen/dp_32"
            android:layout_height="@dimen/dp_32"
            android:layout_marginStart="@dimen/dp_20"
            android:src="@mipmap/auth_err"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.base.baseui.widget.others.GilroyTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_66"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14"
            app:gilroyFont="regular"
            android:text="通过虚拟身份链接APP，没有身份将为你生成一个虚拟身份，虚拟身份具有隐私性。"
            android:layout_marginVertical="@dimen/dp_9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.base.baseui.widget.others.GilroyTextView
        android:layout_marginBottom="@dimen/dp_54"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/tv_join_group"
        android:elevation="@dimen/dp_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_52"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16"
        app:gilroyFont="medium"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_20"
        android:text="授权"
        android:background="@drawable/shape_auth_blue_view"
        android:layout_marginHorizontal="@dimen/dp_30"/>

</LinearLayout>