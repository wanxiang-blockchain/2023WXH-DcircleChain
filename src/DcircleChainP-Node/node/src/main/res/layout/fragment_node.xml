<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.base.baseui.widget.others.GilroyTextView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/tv_title"
        android:textSize="@dimen/sp_18"
        android:textColor="@color/black"
        app:gilroyFont="regular"
        android:layout_gravity="center_horizontal"
        android:text="DcircleChain P-Node Demo"
        android:layout_marginTop="@dimen/dp_33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/title_view"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/color_f1f1f1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/title_view"
        android:background="@color/color_f6f6f6"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.base.baseui.widget.others.GilroyTextView
                android:id="@+id/f_node"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="节点"
                app:gilroyFont="medium"
                android:textSize="@dimen/sp_30"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginStart="@dimen/dp_20"
                />
            <com.base.baseui.widget.others.GilroyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="迁移节点"
                android:id="@+id/f_btn"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/black"
                android:paddingHorizontal="@dimen/dp_10"
                android:paddingVertical="@dimen/dp_2"
                app:layout_constraintTop_toTopOf="@id/f_node"
                android:background="@drawable/border_16dp_radius"
                app:layout_constraintBottom_toBottomOf="@id/f_node"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="@dimen/dp_20" />
            <LinearLayout
                android:id="@+id/f_base_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_15"
                android:padding="@dimen/dp_15"
                android:background="@drawable/shape_bg_node_did"
                app:layout_constraintTop_toBottomOf="@id/f_node">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <com.base.baseui.widget.others.GilroyTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="基本信息"
                        android:textSize="@dimen/sp_16"
                        app:gilroyFont="medium"
                        android:textColor="@color/black"
                        />
                    <com.base.baseui.widget.others.GilroyTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ID Address"
                        android:textSize="@dimen/sp_12"
                        app:gilroyFont="medium"
                        android:layout_marginTop="@dimen/dp_10"
                        android:textColor="#ff969799"
                        />
                    <com.base.baseui.widget.others.GilroyTextView
                        android:id="@+id/tv_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_4"
                        android:layout_marginBottom="@dimen/dp_16"
                        android:textSize="@dimen/sp_14"
                        app:gilroyFont="regular"
                        android:textColor="@color/black"
                        />
                    <com.base.baseui.widget.others.GilroyTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Network Address"
                        android:textSize="@dimen/sp_12"
                        app:gilroyFont="medium"
                        android:textColor="#ff969799"
                        />
                    <com.base.baseui.widget.others.GilroyTextView
                        android:id="@+id/tv_network_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_4"
                        android:layout_marginBottom="@dimen/dp_16"
                        android:textSize="@dimen/sp_14"
                        app:gilroyFont="regular"
                        android:textColor="@color/black"
                        />
                    <com.base.baseui.widget.others.GilroyTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="服务商"
                        android:textSize="@dimen/sp_12"
                        app:gilroyFont="medium"
                        android:textColor="#ff969799"
                        />
                    <com.base.baseui.widget.others.GilroyTextView
                        android:id="@+id/tv_service"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_4"
                        android:textSize="@dimen/sp_14"
                        app:gilroyFont="regular"
                        android:textColor="@color/black"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/f_base_info2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_15"
                android:padding="@dimen/dp_15"
                android:background="@drawable/shape_bg_node_did"
                app:layout_constraintTop_toBottomOf="@id/f_base_info">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <com.base.baseui.widget.others.GilroyTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="节点配置"
                        android:textSize="@dimen/sp_16"
                        app:gilroyFont="medium"
                        android:textColor="@color/black"
                        />
                    <com.base.baseui.widget.others.GilroyTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="处理器"
                        android:textSize="@dimen/sp_12"
                        app:gilroyFont="medium"
                        android:layout_marginTop="@dimen/dp_10"
                        android:textColor="#ff969799"
                        />
                    <com.base.baseui.widget.others.GilroyTextView
                        android:id="@+id/tv_cpu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_4"
                        android:layout_marginBottom="@dimen/dp_16"
                        android:textSize="@dimen/sp_14"
                        app:gilroyFont="regular"
                        android:textColor="@color/black"
                        />
                    <com.base.baseui.widget.others.GilroyTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="内存"
                        android:textSize="@dimen/sp_12"
                        app:gilroyFont="medium"
                        android:textColor="#ff969799"
                        />
                    <com.base.baseui.widget.others.GilroyTextView
                        android:id="@+id/tv_memory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_4"
                        android:layout_marginBottom="@dimen/dp_16"
                        android:textSize="@dimen/sp_14"
                        app:gilroyFont="regular"
                        android:textColor="@color/black"
                        />
                    <com.base.baseui.widget.others.GilroyTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="存储空间"
                        android:textSize="@dimen/sp_12"
                        app:gilroyFont="medium"
                        android:textColor="#ff969799"
                        />
                    <com.base.baseui.widget.others.GilroyTextView
                        android:id="@+id/tv_storage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_4"
                        android:textSize="@dimen/sp_14"
                        app:gilroyFont="regular"
                        android:textColor="@color/black"
                        />
                </LinearLayout>
            </LinearLayout>
            <com.base.baseui.widget.others.GilroyTextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_20"
                app:layout_constraintTop_toBottomOf="@id/f_base_info2"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>