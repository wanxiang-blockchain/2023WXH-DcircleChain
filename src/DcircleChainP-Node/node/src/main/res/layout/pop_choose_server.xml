<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/dp_8"
        app:cardCornerRadius="@dimen/dp_15">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_create"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/dp_15"
                android:paddingTop="@dimen/dp_17"
                android:paddingBottom="@dimen/dp_15">

                <com.base.baseui.widget.others.GilroyTextView
                    android:id="@+id/tv_create"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="自建"
                    android:textColor="@color/color_323233"
                    android:textSize="@dimen/sp_14"
                    app:gilroyFont="medium" />

                <ImageView
                    android:id="@+id/img_create"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:src="@mipmap/ic_server_selected" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_one_drive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/dp_15"
                android:paddingTop="@dimen/dp_17"
                android:paddingBottom="@dimen/dp_15">

                <com.base.baseui.widget.others.GilroyTextView
                    android:id="@+id/tv_one_drive"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="One Drive"
                    android:textColor="@color/color_323233"
                    android:textSize="@dimen/sp_14"
                    app:gilroyFont="medium" />

                <ImageView
                    android:id="@+id/img_one_drive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:src="@mipmap/ic_server_selected"  />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_microsoft"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/dp_15"
                android:paddingTop="@dimen/dp_17"
                android:paddingBottom="@dimen/dp_15">

                <com.base.baseui.widget.others.GilroyTextView
                    android:id="@+id/tv_microsoft"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="微软云"
                    android:textColor="@color/color_323233"
                    android:textSize="@dimen/sp_14"
                    app:gilroyFont="medium" />

                <ImageView
                    android:id="@+id/img_microsoft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:src="@mipmap/ic_server_selected" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_aws"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/dp_15"
                android:paddingTop="@dimen/dp_17"
                android:paddingBottom="@dimen/dp_15">

                <com.base.baseui.widget.others.GilroyTextView
                    android:id="@+id/tv_aws"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="AWS"
                    android:textColor="@color/color_323233"
                    android:textSize="@dimen/sp_14"
                    app:gilroyFont="medium" />

                <ImageView
                    android:id="@+id/img_aws"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_server_selected" />
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</FrameLayout>

