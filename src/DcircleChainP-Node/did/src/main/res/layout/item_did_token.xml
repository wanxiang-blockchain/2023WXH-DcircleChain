<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_70"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/img_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_width="@dimen/dp_41"
        android:layout_height="@dimen/dp_41"/>

    <com.base.baseui.widget.others.GilroyTextView
        android:id="@+id/tv_name"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/color_3f3f47"
        app:gilroyFont="regular"
        android:layout_marginStart="@dimen/dp_10"
        app:layout_constraintStart_toEndOf="@id/img_logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.base.baseui.widget.others.GilroyTextView
        android:id="@+id/tv_count"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_15"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_18"
        app:gilroyFont="bold"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.base.baseui.widget.others.GilroyTextView
        android:id="@+id/tv_price"
        android:layout_marginBottom="@dimen/dp_7"
        app:layout_constraintEnd_toEndOf="@id/tv_count"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/color_969799"
        android:textSize="@dimen/sp_12"
        app:gilroyFont="regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>