<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/dp_15"
    android:layout_marginHorizontal="@dimen/dp_20"
    android:paddingHorizontal="@dimen/dp_20"
    android:background="@color/color_f6f6f6"
    xmlns:app="http://schemas.android.com/apk/res-auto">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:background="@drawable/shape_bg_share_did"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:paddingTop="@dimen/dp_15"
                            android:layout_height="wrap_content">
                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:id="@+id/cl_radar"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    >

                                        <com.base.baseui.widget.others.radar.StatRadarView
                                            android:id="@+id/radar_view"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            app:layout_constraintHorizontal_bias="0.504"
                                            app:layout_constraintLeft_toLeftOf="parent"
                                            android:layout_marginTop="@dimen/dp_10"
                                            app:layout_constraintRight_toRightOf="parent"
                                            app:layout_constraintTop_toTopOf="parent" />
                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            app:layout_constraintBottom_toBottomOf="parent"
                                            app:layout_constraintRight_toRightOf="parent"
                                            android:layout_marginRight="@dimen/dp_25"
                                            android:src="@mipmap/ic_color_line"/>

                                        <com.base.baseui.widget.AppDateLabel
                                            android:id="@+id/app_date_label"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            app:layout_constraintEnd_toEndOf="parent"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintTop_toBottomOf="@+id/radar_view"/>

                                        <com.base.baseui.widget.others.GilroyTextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            app:layout_constraintBottom_toBottomOf="parent"
                                            app:layout_constraintTop_toTopOf="parent" />
                                </androidx.constraintlayout.widget.ConstraintLayout>
                                <com.base.baseui.widget.others.GilroyTextView
                                    android:id="@+id/tv_choose_server"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/dp_44"
                                    android:background="@drawable/border_f2f3f5_22dp_radius"
                                    android:layout_marginTop="@dimen/dp_22"
                                    android:layout_marginHorizontal="@dimen/dp_15"
                                    android:paddingVertical="@dimen/dp_12"
                                    android:paddingHorizontal="@dimen/dp_15"
                                    android:maxLines="1"
                                    android:ellipsize="end"
                                    android:drawableEnd="@mipmap/right_arrow"
                                    android:text="聊天数据"
                                    android:textSize="@dimen/sp_16"
                                    app:gilroyFont="regular"
                                    android:textColor="@color/black"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/cl_radar" />
                                <androidx.cardview.widget.CardView
                                    android:id="@+id/view_image"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/tv_choose_server"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    android:layout_marginTop="@dimen/dp_15"
                                    android:layout_marginBottom="@dimen/dp_15"
                                    android:layout_marginStart="@dimen/dp_15"
                                    app:cardCornerRadius="@dimen/dp_12"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">
                                        <ImageView
                                            android:src="@mipmap/ic_social_logo"
                                            android:layout_width="@dimen/dp_44"
                                            android:layout_height="@dimen/dp_44"/>
                                </androidx.cardview.widget.CardView>
                                <com.base.baseui.widget.others.GilroyTextView
                                    android:id="@+id/tv_bottom"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/dp_10"
                                    android:textSize="@dimen/sp_16"
                                    android:textColor="#000000"
                                    app:gilroyFont="medium"
                                    android:text="Dcircle Social…"
                                    app:layout_constraintTop_toTopOf="@id/view_image"
                                    app:layout_constraintStart_toEndOf="@id/view_image"
                                    />
                                <com.base.baseui.widget.others.GilroyTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/shape_demo_confirm"
                                    android:textSize="@dimen/sp_12"
                                    android:textColor="#4A5EF8"
                                    app:gilroyFont="regular"
                                    android:text="Demo"
                                    android:paddingVertical="@dimen/dp_3"
                                    android:paddingHorizontal="@dimen/dp_6"
                                    app:layout_constraintTop_toTopOf="@id/tv_bottom"
                                    app:layout_constraintBottom_toBottomOf="@id/tv_bottom"
                                    app:layout_constraintStart_toEndOf="@id/tv_bottom"
                                    />
                                <com.base.baseui.widget.others.GilroyTextView
                                    android:id="@+id/tv_bottom2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dp_2"
                                    android:layout_marginStart="@dimen/dp_10"
                                    android:textSize="@dimen/sp_12"
                                    android:textColor="#969799"
                                    app:gilroyFont="regular"
                                    android:text="由你控制的社交网络及内容…"
                                    app:layout_constraintTop_toBottomOf="@id/tv_bottom"
                                    app:layout_constraintStart_toEndOf="@id/view_image"
                                    />
                                <com.base.baseui.widget.others.GilroyTextView
                                    android:id="@+id/authorize_access"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/shape_demo_tv_view"
                                    android:textSize="@dimen/sp_14"
                                    android:textColor="#486AF8"
                                    app:gilroyFont="medium"
                                    android:text="授权接入"
                                    android:paddingVertical="@dimen/dp_8"
                                    android:paddingHorizontal="@dimen/dp_10"
                                    android:layout_marginEnd="@dimen/dp_15"
                                    app:layout_constraintTop_toTopOf="@id/view_image"
                                    app:layout_constraintBottom_toBottomOf="@id/view_image"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.core.widget.NestedScrollView>
        </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
