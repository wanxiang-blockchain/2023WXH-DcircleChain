<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="0dip" />
            <gradient
                android:angle="270"
                android:centerColor="@color/color_f6f6f6"
                android:centerY="0.75"
                android:endColor="@color/color_f6f6f6"
                android:startColor="@color/color_f6f6f6" />
            <corners android:radius="6dp" />
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="0dip" />
                <gradient
                    android:angle="270"
                    android:centerColor="@color/color_f6f6f6"
                    android:centerY="0.75"
                    android:endColor="@color/color_f6f6f6"
                    android:startColor="@color/color_f6f6f6" />
                <corners android:radius="6dp" />
            </shape>
        </clip>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="0dip" />
                <gradient
                    android:angle="270"
                    android:centerColor="#ff71da75"
                    android:centerY="0.75"
                    android:endColor="#ff9ed85a"
                    android:startColor="#ff71da75" />
                <corners android:radius="6dp" />
            </shape>
        </clip>
    </item>

</layer-list>