<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/login_round_shap"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <View
        android:background="@drawable/gray_round_shap"
        android:layout_width="@dimen/dp_45"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_34"
        android:layout_gravity="center"
        android:layout_height="@dimen/dp_5"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="match_parent">
        <ImageView
            android:src="@mipmap/ic_wait_lock_dialog"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"/>
        <com.base.baseui.widget.others.GilroyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/message_locked_generation"
            android:textColor="#ff000000"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_24"
            android:layout_marginBottom="@dimen/dp_10"
            android:textSize="22sp"
            app:gilroyFont="medium"
            />

        <com.base.baseui.widget.others.GilroyTextView
            android:id="@+id/tv_waiting_key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:gilroyFont="regular"
            android:gravity="center"
            android:text="@string/message_encrypted_waiting_key"
            android:textColor="#80000000"
            android:textSize="18sp"
            android:paddingHorizontal="@dimen/dp_55"
            android:layout_marginBottom="@dimen/dp_19"
            />
        <com.base.baseui.widget.others.GilroyTextView
            android:id="@+id/tv_done"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:text="@string/picture_know"
            android:textColor="@color/white"
            android:enabled="true"
            android:paddingHorizontal="@dimen/dp_36"
            android:textSize="@dimen/sp_16"
            app:gilroyFont="medium"
            android:gravity="center"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_14"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/gradient_alph_background"/>
    </LinearLayout>


</LinearLayout>