<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?actionBarSize"
    android:id="@+id/cl_content"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_44"
        android:paddingVertical="@dimen/dp_10"
        android:paddingEnd="@dimen/dp_10"
        android:paddingStart="@dimen/dp_6"
        android:layout_marginStart="@dimen/dp_10"
        android:scaleType="centerInside"
        android:src="@mipmap/ic_back_black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <com.base.baseui.widget.others.GilroyTextView
        android:id="@+id/titleview_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginHorizontal="@dimen/dp_100"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:maxLines="1"
        android:ellipsize="end"
        tools:text = "title"
        android:textSize="@dimen/sp_18"
        android:textColor="@color/black"
        app:gilroyFont="medium"/>

    <ImageView
        android:id="@+id/iv_right_image"
        android:layout_width="@dimen/dp_39"
        android:layout_height="@dimen/dp_34"
        android:paddingVertical="@dimen/dp_5"
        android:paddingStart="@dimen/dp_10"
        android:paddingEnd="@dimen/dp_5"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="@dimen/dp_10"/>

    <ImageView
        android:id="@+id/iv_right_second_image"
        android:layout_marginEnd="@dimen/dp_15"
        android:visibility="gone"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toStartOf="@id/iv_right_image"
        app:layout_constraintTop_toTopOf="@id/iv_right_image"
        app:layout_constraintBottom_toBottomOf="@id/iv_right_image"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:visibility="visible"
        android:id="@+id/iv_did"
        android:background="@color/color_f6f6f6"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>